<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Junkshop View | Kariton</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
  <meta name="description" content="View detailed information about a junkshop in Kariton.">
</head>

<body>
  <!-- Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">

    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-between">
          <a href="/" class="text-nowrap logo-img">            <img src="../img/image-removebg-preview (1) (2).png" width="180" style="opacity: 0.7;" alt="Kariton Logo" />
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <span class="ti ti-x fs-8"></span>
          </div>
        </div>
        <nav>
          <%- include('./partials/sidebar'); -%>
        </nav>
      </div>
    </aside>

    <!-- Main wrapper -->
    <div class="body-wrapper">
      <header>
        <%- include('./partials/head'); -%>
      </header>
      
      <!-- Content Start -->
      <div class="container-fluid">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Junkshop Information</h5>
            <p><strong>Junkshop Name:</strong> <%= junkshop.jShop %></p>
            <p><strong>Owner:</strong> <%= junkshop.name %></p>
            <p><strong>Contact Number:</strong> <%= junkshop.phone %></p>
            <p><strong>Address:</strong> <%= junkshop.location %></p>
            <p><strong>Scrap Type:</strong> <%= junkshop.scrapType %></p>
            <p><strong>Weight:</strong> <%= junkshop.weight %> kg</p>
            <p><strong>Status:</strong>
              <% if (junkshop.status === "pending") { %>
                <span><span class="ti ti-clock text-secondary"></span> Pending</span>
              <% } %>
              <% if (junkshop.status === "approved") { %>
                <span><span class="ti ti-check text-success"></span> Approved</span>
              <% } %>
              <% if (junkshop.status === "declined") { %>
                <span><span class="ti ti-close text-danger"></span> Rejected</span>
              <% } %>
              <% if (junkshop.status === "Done") { %>
                <span><span class="ti ti-close text-danger"></span> Done</span>
              <% } %>
            </p>
            <div class=" justify-content-between mt-4">
              <% if (junkshop.status === "approved") { %>
                <a href="#" class="btn btn-success me-2" id="doneBtn">Done</a>
              <% } %>
              
              <a href="https://www.google.com/maps/dir/Adp+Junkshop/<%= junkshop.location %>" target="_blank" class="btn btn-primary">
                Navigate
              </a>
            </div>
          </div>
        </div>
      </div>
      <!-- Content End -->
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Confirm Transaction</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Is the transaction done?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="confirmDoneBtn">Proceed</button>
        </div>
      </div>
    </div>
  </div>

  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../assets/js/sidebarmenu.js"></script>
  <script src="../assets/js/app.min.js"></script>
  <script src="../assets/libs/simplebar/dist/simplebar.js"></script>

  <script>
    // When the "Done" button is clicked, show the modal
    document.getElementById('doneBtn').addEventListener('click', function(event) {
      event.preventDefault();
      var modal = new bootstrap.Modal(document.getElementById('confirmationModal'), {});
      modal.show();
    });

    // When "Proceed" is clicked in the modal, make a request to update the status
    document.getElementById('confirmDoneBtn').addEventListener('click', function() {
      // Example of sending a request to update junkshop status
      $.ajax({
        url: '/updateJunkshopStatus',  // Adjust this to your API endpoint
        type: 'POST',
        data: { status: 'Done', id: '<%= junkshop._id %>' },
        success: function(response) {
          // Handle success (e.g., reload the page or update the UI)
          alert('Transaction marked as Done');
          location.reload();  // Reload the page to reflect the updated status
        },
        error: function(xhr, status, error) {
          // Handle error
          alert('Error updating status');
        }
      });
    });
  </script>
</body>

</html>
