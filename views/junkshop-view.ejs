<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Junkshop View | Kariton</title>  <link rel="icon" href="img/home-logo.png" type="image/x-icon"/>

  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
  <meta name="description" content="View detailed information about a junkshop in Kariton.">
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    
    <!-- Sidebar Start -->
    <aside class="left-sidebar">
      <!-- Sidebar scroll-->
      <div>
        <div class="brand-logo d-flex align-items-center justify-content-between">
          <a href="/" class="text-nowrap logo-img">
            <img src="../img/image-removebg-preview (1) (2).png" width="180" style="opacity: 0.7;" alt="Kariton Logo" />
          </a>
          <div class="close-btn d-xl-none d-block sidebartoggler cursor-pointer" id="sidebarCollapse">
            <span class="ti ti-x fs-8"></span>
          </div>
        </div>
        <!-- Sidebar navigation-->
        <nav>
          <%- include('./partials/sidebar'); -%>
        </nav>
        <!-- End Sidebar navigation -->
      </div>
      <!-- End Sidebar scroll-->
    </aside>
    <!--  Sidebar End -->
    
    <!--  Main wrapper -->
    <div class="body-wrapper">
      <!--  Header Start -->
      <header>
        <%- include('./partials/head'); -%>
      </header>
      <!--  Header End -->
      <div class="container-fluid">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title fw-semibold mb-4">Junkshop Information</h5>
            <p><strong>Junkshop Name:</strong> <%= junkshop.jShopName %></p>
            <p><strong>Owner Name:</strong> <%= junkshop.ownerName %></p>
            <p><strong>Address:</strong> <%= junkshop.address %></p>
            <p><strong>Contact Number:</strong> <%= junkshop.phone %></p>
            <p><strong>Email:</strong> <%= junkshop.email %></p>
            <p><strong>Junkshop Images:</strong></p>
<div class="image-gallery">
  <% if (junkshop.jShopImg) { %>
    <img src="data:image/png;base64,<%= junkshop.jShopImg %>" alt="Junkshop Image 1" width="150" style="cursor: pointer;" onclick="openModal('<%= junkshop.jShopImg %>')" />
  <% } else { %>
    <p>No image available for Image 1.</p>
  <% } %>
  <p><strong>Junkshop Images:</strong></p>
  <% if (junkshop.validID) { %>
    <img src="data:image/png;base64,<%= junkshop.validID %>" alt="Junkshop Image 2" width="150" style="cursor: pointer;" onclick="openModal('<%= junkshop.validID %>')" />
  <% } else { %>
    <p>No image available for Image 2.</p>
  <% } %>
  <p><strong>Junkshop Images:</strong></p>
  <% if (junkshop.permit) { %>
    <img src="data:image/png;base64,<%= junkshop.permit %>" alt="Junkshop Image 3" width="150" style="cursor: pointer;" onclick="openModal('<%= junkshop.permit %>')" />
  <% } else { %>
    <p>No image available for Image 3.</p>
  <% } %>
</div>
            <p><strong>Status:</strong>
              <% if (junkshop.isApproved === null) { %>
                <span><span class="ti ti-clock text-secondary"></span> Pending</span>
              <% } %>
              <% if (junkshop.isApproved === true) { %>
                <span><span class="ti ti-check text-success"></span> Approved</span>
              <% } %>
              <% if (junkshop.isApproved === false) { %>
                <span><span class="ti ti-close text-danger"></span> Rejected</span>
              <% } %>
            </p>
            
        <!-- Junkshop Image Display -->


<!-- Modal Structure -->
<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="imageModalLabel">Junkshop Image</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img id="modalImage" src="" alt="Junkshop Image" class="img-fluid" />
      </div>
    </div>
  </div>
</div>

<script src="../assets/libs/jquery/dist/jquery.min.js"></script>
<script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="../assets/js/sidebarmenu.js"></script>
<script src="../assets/js/app.min.js"></script>
<script src="../assets/libs/simplebar/dist/simplebar.js"></script>

<script>
function openModal(imageBase64) {
  document.getElementById('modalImage').src = 'data:image/png;base64,' + imageBase64;
  $('#imageModal').modal('show'); // Use jQuery to show the modal
}
</script>
